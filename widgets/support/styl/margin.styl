margin( args... )
	params = ()
	for n in args
		push( params, n == 'auto' ? n : unit( n, unit( n ) || 'px' ) )

	margin params

margin-top( args... )
	params = ()
	for n in args
		push( params, unit( floor(n), unit( n ) || 'px' ) )

	margin-top params

