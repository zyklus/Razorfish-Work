{
	  "version"      : "0.0.1"
	, "description"  : "MVC class providing basic functionality to the Model, View, Controller classes"
	, "author"       : "Mark Kahn"
	, "email"        : "mark.kahn@razorfish.com"
	, "uri"          : "http://www.razorfish.com"

	, "dependencies" : [ "observable/configurable" ]
	, "files"        : [ "mvc.js" ]

	, "subPlugins" : [
		  { "name" : "model"       , "files" : [ "model.js"        ], "dependencies" : [ "mvc"      ] }
		, { "name" : "view"        , "files" : [ "view.js"         ], "dependencies" : [ "mvc"      ] }
		, { "name" : "controller"  , "files" : [ "controller.js"   ], "dependencies" : [ "mvc"      ] }
		, { "name" : "view/mutable", "files" : [ "view.mutable.js" ], "dependencies" : [ "mvc/view" ] }
	]
}